generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id              String    @id @default(cuid())
  whatsappNumberId String   @map("whatsapp_number_id") // Multi-tenant support - the business phone number ID
  phoneNumber     String    @map("phone_number")
  contactName     String?   @map("contact_name")
  status          String    @default("active")
  humanTakeover   Boolean   @default(false) @map("human_takeover") // Human-in-the-loop: when true, AI should not respond
  lastActiveAt    DateTime? @map("last_active_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  metadata        Json      @default("{}")
  
  messages        Message[]

  @@unique([whatsappNumberId, phoneNumber])
  @@index([whatsappNumberId])
  @@index([phoneNumber])
  @@index([status])
  @@index([humanTakeover])
  @@index([lastActiveAt(sort: Desc)])
  @@map("conversations")
}

model Message {
  id                  String    @id
  conversationId      String    @map("conversation_id")
  direction           String
  content             String?
  phoneNumber         String    @map("phone_number")
  messageType         String    @map("message_type")
  status              String?
  hasMedia            Boolean   @default(false) @map("has_media")
  mediaUrl            String?   @map("media_url")
  mediaFilename       String?   @map("media_filename")
  mediaMimeType       String?   @map("media_mime_type")
  mediaByteSize       Int?      @map("media_byte_size")
  reactionEmoji       String?   @map("reaction_emoji")
  reactedToMessageId  String?   @map("reacted_to_message_id")
  timestamp           BigInt
  createdAt           DateTime  @default(now()) @map("created_at")
  metadata            Json      @default("{}")

  conversation        Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([timestamp(sort: Desc)])
  @@index([direction])
  @@map("messages")
}
